{
  "name": "hooks-tool-pack",
  "description": "A comprehensive collection of reusable custom React hooks designed to accelerate development by eliminating the need to create common functionality from scratch. Compatible with both Client-Side Rendering (CSR) and Server-Side Rendering (SSR) environments.",
  "version": "1.0.0",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly -p tsconfig.build.json",
    "lint": "eslint .",
    "docs": "typedoc --tsconfig tsconfig.build.json",
    "test": "vitest --reporter=html --reporter=default",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "react": ">=18.3.0",
    "react-dom": "^19.1.1"
  },
  "peerDependencies": {
    "react": ">=18.3.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.7",
    "commitlint": "^20.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-react-x": "^2.3.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "npm:rolldown-vite@7.1.14",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.7"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "vitest --changed"
    ]
  }
}
